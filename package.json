{
  "name": "tauri-build-action",
  "version": "1.0.2",
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoy-l/tauri-build-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "zoy-l",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@tauri-apps/cli": "1.4.0",
    "@tauri-apps/cli-darwin-arm64": "1.5.0",
    "@tauri-apps/cli-darwin-x64": "1.4.0",
    "@tauri-apps/cli-linux-x64-gnu": "1.4.0",
    "@tauri-apps/cli-win32-x64-msvc": "1.4.0",
    "string-argv": "^0.3.2",
    "tiny-glob": "^0.2.9"
  },
  "devDependencies": {
    "@types/node": "20.7.0",
    "@typescript-eslint/parser": "6.7.3",
    "@vercel/ncc": "0.38.0",
    "eslint": "8.50.0",
    "eslint-plugin-github": "4.10.1",
    "js-yaml": "4.1.0",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  }
}
